<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.kent.hisdemo.mapper.user.UserMapper">
    <insert id="addUser">
        INSERT INTO `console_user` (`id`, `user_name`, `password`, `phone_num`, `gender`, `role`)
        VALUES (#{id}, #{userName}, #{password}, #{phoneNum}, #{gender}, #{role});
    </insert>
    <select id="getUser" resultType="com.kent.hisdemo.entity.user.User">
        SELECT *
        FROM `console_user`
        where id = #{id};
    </select>
    <update id="updateUser">
        UPDATE `console_user`
        SET `user_name`=#{userName},
            `password`=#{password},
            `phone_num`=#{phoneNum},
            `gender`=#{gender},
            `role`=#{role}
        WHERE `id` = #{id};
    </update>
    <delete id="deleteUser">
        DELETE
        FROM `console_user`
        WHERE `id` = #{id};
    </delete>

    <select id="getUserByNameAndPwd" resultType="com.kent.hisdemo.entity.user.User">
        SELECT *
        FROM `console_user`
        where `user_name` = #{userName}
          AND `password` = #{password};
    </select>

    <select id="selectByLoginName" resultType="com.kent.hisdemo.entity.user.User">
        SELECT *
        FROM `console_user`
        where `user_name` = #{userName};
    </select>
    <insert id="register">
        INSERT INTO `console_user` (`user_name`, `password`, `phone_num`, `gender`)
        VALUES (#{userName}, #{password}, #{phoneNum}, #{gender});
    </insert>

</mapper>